<!DOCTYPE html>
<html lang="es">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Gráfico con Datos de la Base de Datos</title>
    <script src='https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.7.2/Chart.min.js'></script>
</head>

<body>
    <div style="width: 80%; margin: auto;">
        <canvas id="eventsLocations"></canvas>
    </div>
    <table class="table-striped">
        <thead>
            <tr>
                <th>Nombre</th>
                <th>Nº de eventos</th>
            </tr>
        </thead>
        <tbody>
            {{#each locations}}
            <tr>
                <td>{{name}}</td>
                <td>{{numEvents}}</td>
            </tr>
            {{/each}}
        </tbody>
    </table>

    <script>
        var eventsByLocationsData = [];
        {{#each locations}}
          var name = '{{name}}';
          var numEvents = {{numEvents}};
          eventsByLocationsData.push({ name: name, numEvents: numEvents });
        {{/each}}

        var labels = eventsByLocationsData.map(entry => entry.name);
        var data = eventsByLocationsData.map(entry => entry.numEvents);

        var ctx = document.getElementById('eventsLocations').getContext('2d');
        var eventsLocationsChart = new Chart(ctx, {
            type: 'bar',
            data: {
                labels: labels,
                datasets: [{
                    label: 'Total de eventos',
                    backgroundColor: 'rgba(75, 192, 192, 0.2)',
                    borderColor: 'rgba(75, 192, 192, 1)',
                    borderWidth: 1,
                    data: data
                }]
            },
            options: {
                animation: { duration: 0 },
                scales: {
                    yAxes: [{
                        ticks: {
                            beginAtZero: true
                        }
                    }]
                }
            }
        });
    </script>
</body>

</html>
